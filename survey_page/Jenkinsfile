pipeline {
    agent any
    environment {
        DOCKERHUB_PASS = credentials('docker-pass')
    }
    stages {
        stage("Checkout Code") {
            steps {
                script {
                    checkout scm
                }
            }
        }
        stage("Build Docker Image") {
            steps {
                script {
                    def timestamp = currentBuild.startTimeInMillis
                    sh "docker login -u mengwensu -p ${DOCKERHUB_PASS}"
                    def customImage = docker.build("mengwensu/msu5swe645project2:0.2-${timestamp}")
                }
            }
        }
        stage("Push Docker Image") {
            steps {
                script {
                    def timestamp = currentBuild.startTimeInMillis
                    sh "docker push mengwensu/msu5swe645project2:0.2-${timestamp}"
                }
            }
        }
        stage("Deploy to Rancher as Single Pod") {
            steps {
                script {
                    def timestamp = currentBuild.startTimeInMillis
                    sh "kubectl set image deployment/hw2-deployment-v2 hw2-deployment-v2=mengwensu/msu5swe645project2:0.2-${timestamp} -n jenkins-pipeline"
                }
            }
        }
        stage("Deploy to Rancher with Load Balancer") {
            steps {
                script {
                    def timestamp = currentBuild.startTimeInMillis
                    sh "kubectl set image deployment/hw2-deployment-v2-lb hw2-deployment-v2-lb=mengwensu/msu5swe645project2:0.2-${timestamp} -n jenkins-pipeline"
                }
            }
        }
    }
}
