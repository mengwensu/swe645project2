pipeline {
    agent any
    environment {
        DOCKERHUB_PASS = credentials('dockerhub')
        def buildTimestamp = new Date().format("yyyyMMdd-HHmmss", TimeZone.getTimeZone("UTC"))

    }
    stages {
        stage("Building the Student Survey Image") {
            steps {
                script {
                    checkout scm

                    // Set BUILD_TIMESTAMP inside the script block

                    sh "echo ${buildTimestamp}"
                    sh "docker login -u mengwensu -p ${DOCKERHUB_PASS_PSW}"

                    def customImage = docker.build("mengwensu/msu5swe645project2:0.2-${buildTimestamp}")
                }
            }
        }
        stage("Pushing image to Dockerhub") {
            steps {
                script {
                    // Use the same buildTimestamp used for building the image
                    // def buildTimestamp = new Date().format("yyyyMMdd-HHmmss", TimeZone.getTimeZone("UTC"))
                    sh "docker push mengwensu/msu5swe645project2:0.2-${buildTimestamp}"
                }
            }
        }
        stage("Deploying to Rancher as single pod") {
            steps {
                script {
                    // Use the same buildTimestamp used for building the image
                    // def buildTimestamp = new Date().format("yyyyMMdd-HHmmss", TimeZone.getTimeZone("UTC"))
                    sh "kubectl set image deployment/hw2-deployment-v2 container=hw2=mengwensu/msu5swe645project2:0.2-${buildTimestamp} -n default"
                }
            }
        }
    }
}
