pipeline {
    agent any
    environment {
        DOCKERHUB_PASS = credentials('dockerhub')
        BUILD_TIMESTAMP = new Date().format("yyyyMMdd-HHmmss")
    }
    stages {
        stage("Building the Student Survey Image") {
            steps {
                script {
                    checkout scm

                    // Use sanitized BUILD_TIMESTAMP from environment
                    sh "echo ${BUILD_TIMESTAMP}"
                    sh "docker login -u mengwensu -p ${DOCKERHUB_PASS}"

                    def customImage = docker.build("mengwensu/msu5swe645project2:0.2:${env.BUILD_TIMESTAMP}")
                }
            }
        }
        stage("Pushing image to Dockerhub") {
            steps {
                script {
                    // Use sanitized BUILD_TIMESTAMP from environment
                    sh "docker push mengwensu/msu5swe645project2:0.2:${env.BUILD_TIMESTAMP}"
                }
            }
        }
        stage("Deploying to Rancher as single pod") {
            steps {
                script {
                    // Use sanitized BUILD_TIMESTAMP from environment
                    sh "kubectl set image deployment/hw2-deployment-v2 container=hw2=mengwensu/msu5swe645project2:0.2:${env.BUILD_TIMESTAMP} -n default"
                }
            }
        }
    }
}


